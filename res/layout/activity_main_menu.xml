
        <com.handmark.pulltorefresh.library.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/background"
            android:orientation="vertical"
            tools:context=".MainActivity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <LinearLayout
            android:id="@+id/market_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            

            <ImageView
                android:id="@+id/market_logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="left"
                android:scaleType="fitXY"
                android:src="@drawable/market_icon" />

            <TextView
                android:id="@+id/market_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:textAlignment="textStart"
                android:textColor="#34a725"
                android:textSize="35sp" />

        </LinearLayout>
        	
        	<LinearLayout
        	    android:id="@+id/market_bottom"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_gravity="left"
        	    android:layout_marginTop="-30dp"
        	    android:layout_marginLeft="90dp"
        	    android:orientation="vertical" >
            
        	     <TextView
        	        android:id="@+id/price_usd"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="left"
        	        android:layout_marginTop="0dp"
        	        android:layout_marginLeft="12dp"
        	        android:gravity="center"
        	        android:textAlignment="center"
        	        android:textColor="#ceba2d"
        	        android:textSize="23sp" />

        	    <TextView
        	        android:id="@+id/market_change"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="left"
        	        android:layout_marginTop="7dp"
        	        android:layout_marginLeft="12dp"
        	        android:gravity="center"
        	        android:textAlignment="center"
        	        android:textColor="#f1f1f1"
        	        android:textSize="19sp" />

        	    <TextView
        	        android:id="@+id/market_cap"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="left"
        	        android:layout_marginTop="7dp"
        	        android:layout_marginLeft="12dp"
        	        android:gravity="center"
        	        android:textAlignment="center"
        	        android:textColor="#f1f1f1"
        	        android:textSize="19sp" />

        	    <TextView
        	        android:id="@+id/market_position"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="left"
        	        android:layout_marginTop="7dp"
        	        android:layout_marginLeft="12dp"
        	        android:gravity="center"
        	        android:textAlignment="center"
        	        android:textColor="#f1f1f1"
        	        android:textSize="19sp" />
        	</LinearLayout>

        <LinearLayout
            android:id="@+id/network_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/network_logo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/network" />
            
            <TextView
                android:id="@+id/network_hashrate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:gravity="center"
                android:textAlignment="textStart"
                android:textColor="#2677af"
                android:textSize="35sp" />

        </LinearLayout>

        	<LinearLayout
        	    android:id="@+id/network_bottom"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_marginTop="-30dp"
        	    android:layout_marginLeft="90dp"
        	    android:gravity="left"
        	    android:orientation="vertical" >
            
        	    <TextView
        	        android:id="@+id/network_diff"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="left"
        	        android:layout_marginLeft="11dp"
        	        android:gravity="center"
        	        android:textAlignment="center"
        	        android:textColor="#a73838"
        	        android:textSize="23sp" />

        	    <TextView
        	        android:id="@+id/network_coins"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="left"
        	        android:layout_marginTop="7dp"
        	        android:layout_marginLeft="11dp"
        	        android:gravity="center"
        	        android:textAlignment="center"
        	        android:textColor="#f1f1f1"
        	        android:textSize="19sp" />

        	    <TextView
        	        android:id="@+id/network_blocks"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="left"
        	        android:layout_marginTop="7dp"
        	        android:layout_marginLeft="11dp"
        	        android:gravity="center"
        	        android:textAlignment="center"
        	        android:textColor="#f1f1f1"
        	        android:textSize="19sp" />

        	    <TextView
        	        android:id="@+id/network_interval"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_gravity="left"
        	        android:layout_marginTop="7dp"
        	        android:layout_marginLeft="11dp"
        	        android:gravity="center"
        	        android:textAlignment="center"
        	        android:textColor="#f1f1f1"
        	        android:textSize="19sp" />
        	</LinearLayout>

    	</LinearLayout>

     </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
