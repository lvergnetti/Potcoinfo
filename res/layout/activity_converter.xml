<com.handmark.pulltorefresh.library.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/converterScrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/background"
            android:orientation="vertical"
            tools:context=".MainActivity" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center" >
       
 			<ImageView
                 android:id="@+id/current_currency"
                 android:layout_width="75dp"
                 android:layout_height="75dp"
                 android:layout_gravity="center"
                 android:layout_marginBottom="8dp"
                 android:layout_marginTop="8dp"
                 android:scaleType="fitCenter"
                 android:src="@drawable/leaf"/>
             <EditText
                 android:id="@+id/multiplyer"
                 android:layout_width="match_parent"
                 android:layout_height="55dp"
                 android:layout_marginLeft="0dp"
                 android:layout_marginRight="0dp"
                 android:layout_marginBottom="8dp"
                 android:gravity="center"
                 android:textAlignment="center"
                 android:textColor="#f1f1f1"
                 android:focusable="true"
                 android:singleLine="true"
                 android:hint="POT"
                 android:textSize="30dp"
                 android:inputType="number" />

            
        		<LinearLayout
        		    android:layout_width="match_parent"
        		    android:layout_height="wrap_content"
        		    android:gravity="center" >

        			<ImageView
        			    android:id="@+id/converted_img_1"
        			    android:layout_width="40dp"
        			    android:layout_height="40dp"
        			    android:layout_marginBottom="2dp"
        			    android:layout_gravity="center"
        			    android:scaleType="fitXY"
        			    android:src="@drawable/btc" />

        			<TextView
        			    android:id="@+id/converted_text_1"
        			    android:layout_width="wrap_content"
        			    android:layout_height="wrap_content"
            		    android:layout_gravity="center"
        			    android:textAlignment="center"
        			    android:textColor="#3ca748"
        			    android:textSize="29sp"
        			     />

        		</LinearLayout>

            	<LinearLayout
            	    android:layout_width="match_parent"
            	    android:layout_height="wrap_content"
            	    android:gravity="center"
            	    android:layout_marginTop="2dp" >

            		<ImageView
            		    android:id="@+id/converted_img_2"
            		    android:layout_width="40dp"
            		    android:layout_height="40dp"
            		    android:scaleType="fitXY"
            		    android:src="@drawable/usd"
            		    android:layout_marginRight="-2dp"
            		    android:layout_gravity="center" />

            		<TextView
            		    android:id="@+id/converted_text_2"
            		    android:layout_width="wrap_content"
            		    android:layout_height="wrap_content"
            		    android:textAlignment="center"
            		    android:layout_gravity="center"
            		    android:textColor="#ceba2d"
            		    android:textSize="29sp" />

            	</LinearLayout>
            	
            

        	 </LinearLayout>

       </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
